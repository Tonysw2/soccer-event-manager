{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",

  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },

  "files": {
    "ignoreUnknown": false,
    "ignore": ["node_modules"]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80,
    "indentWidth": 2,
    "lineEnding": "crlf",
    "bracketSpacing": true
  },

  "organizeImports": {
    "enabled": true
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn"
      },

      "complexity": {
        "noForEach": "off"
      },

      "style": {
        "noNonNullAssertion": "warn"
      }
    }
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "jsxQuoteStyle": "double",
      "arrowParentheses": "always",
      "attributePosition": "multiline"
    }
  },

  "json": {
    "formatter": {
      "enabled": true
    }
  }
}
